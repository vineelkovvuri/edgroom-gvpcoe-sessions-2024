{
    "editor.accessibilitySupport": "off",
    "explorer.confirmDragAndDrop": false,
    "editor.rulers": [
        80,
        100
    ],
    "remove-empty-lines.allowedNumberOfEmptyLines": 0,
    "explorer.confirmDelete": false,
    "workbench.startupEditor": "none",
    "editor.codeLens": false,
    "editor.mouseWheelZoom": true,
    "files.associations": {
        "*.w": "cpp"
    },
    "C_Cpp.configurationWarnings": "Disabled",
    "C_Cpp.default.enableConfigurationSquiggles": false,
//     "clang-format.executable": "C:\\Program Files\\LLVM\\bin\\clang-format.exe",
//     "[c]": {
//         "editor.defaultFormatter": "xaver.clang-format",
// //        "editor.formatOnSave": true,
//     },
//     "[cpp]": {
//         "editor.defaultFormatter": "xaver.clang-format",
// //        "editor.formatOnSave": true,
//     },
    "git.enabled": false,
    "git.autofetch": false,
    "[markdown]": {
        "editor.defaultFormatter": "josa.markdown-table-formatter"
    },

    "extensions.ignoreRecommendations": true,
    "formatFiles.extensionsToInclude": "c,h,cpp",
    "editor.formatOnSave": false,
    "cmake.configureOnOpen": false,
    "insertDateString.formatDate": "DD-MMM-YYYY",
    "security.workspace.trust.enabled": false,
    "remote.SSH.localServerDownload": "auto",
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "git.openRepositoryInParentFolders": "never",
    "workbench.editor.splitInGroupLayout": "vertical",
    "window.commandCenter": true,
    "terminal.integrated.scrollback": 25000,
    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    },
    // "workbench.colorCustomizations": {
    //     "scrollbarSlider.background": "#9c0808",
    //     "scrollbarSlider.activeBackground": "#9c0808",
    //     "scrollbarSlider.hoverBackground": "#9c0808",
    // },
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.stickyScroll.enabled": true,
    "terminal.integrated.defaultProfile.windows": "Command Prompt",
    "problems.decorations.enabled": false,
    "window.zoomLevel": 1,
    "editor.minimap.enabled": false,

}
